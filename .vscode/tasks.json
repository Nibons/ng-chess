{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label":"ng start",
            "type": "npm",
            "script": "start",
            "problemMatcher": ["$tsc"]
        },
        {
          "label":"Typescript compile",
          "command": "tsc",
          "args": ["-w", "-p", ".", "--noEmit"],
          "isBackground": true,
          "problemMatcher": "$tsc-watch",
          "type": "process"
        },
        {
          "type": "npm",
          "label":"Lint",
          "script":"lint",
          "problemMatcher":["$tslint5"]
        },
        {
          "type":"npm",
          "label":"Test",
          "script":"test",
          "problemMatcher":["$tslint5"]
        },
        {
            "label": "Build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": [
              "$tslint5"
            ]
        },
        {
            "label": "Build-Prod",
            "type": "shell",
            "command": "ng",
            "args": [
              "build --prod"
            ],
            "problemMatcher": [
              "$tslint5"
          ],
          "group": "build"
        }
    ]
}
