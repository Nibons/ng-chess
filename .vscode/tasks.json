{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [{
      "label": "ng start",
      "identifier": "ng-start",
      "type": "npm",
      "script": "start",
      "problemMatcher": ["$tsc", "$tsc-watch"]
    },
    {
      "label": "Typescript compile",
      "identifier": "tsc-build",
      "command": "tsc",
      "args": ["-w", "-p", ".", "--noEmit"],
      "isBackground": true,
      "problemMatcher": ["$tsc", "$tsc-watch"],
      "type": "process"
    },
    {
      "type": "npm",
      "identifier": "ng-lint",
      "label": "Lint",
      "script": "lint",
      "problemMatcher": ["$tslint5"]
    },
    {
      "type": "npm",
      "identifier": "ng-test",
      "label": "Test",
      "script": "test",
      "problemMatcher": ["$tslint5"]
    },
    {
      "label": "Build",
      "identifier": "ng-build",
      "type": "npm",
      "script": "build",
      "group": "build",
      "problemMatcher": [
        "$tslint5"
      ]
    },
    {
      "label": "Build-Prod",
      "identifier": "ng-build-prod",
      "dependsOn": [
        "ng-lint"
      ],
      "type": "shell",
      "command": "ng",
      "args": [
        "build --prod"
      ],
      "problemMatcher": [
        "$tslint5"
      ],
      "group": "build"
    }
  ]
}
