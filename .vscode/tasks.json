{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": []
        },
        {
            "label": "Build",
            "type": "npm",
            "script": "build",
            "group": "build",
            "problemMatcher": [
                "$eslint-stylish"
            ]
        },
        {
            "label": "Build-Prod",
            "type": "shell",
            "command": "ng",
            "args": [
              "build --prod"
            ],
            "problemMatcher": [
              "$eslint-stylish"
          ],
          "group": "build"
        }
    ]
}
