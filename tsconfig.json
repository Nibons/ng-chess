{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@chess/*": [
        "src/app/chess-service/interfaces/*",
        "src/app/chess-service/classes/*",
        "src/app/chess-service/classes/pieces/*",
        "src/app/chess-service/enums/*",
        "src/app/chess-service/states/*",
        "src/app/chess-service/actions/*",
      ],
      "@app/*": ["src/app/*"],
      "@gameTemplates": ["src/assets/game_templates/*"]
    }
  }
}
